<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_download_test"
        android:id="@+id/button_download_test"
        android:onClick="onClick"
        android:layout_weight="0.10"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listTest"
        style="@style/TestListView"

        android:listSelector="@color/blue"
        android:layout_weight="0.60" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_start_test"
        android:id="@+id/button_start_test"
        android:onClick="onClick"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"/>




</LinearLayout>
